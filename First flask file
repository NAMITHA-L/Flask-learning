from flask import Flask

app = Flask(__name__)

@app.route('/')
def open():
    return "<h1> Hello, World! </h1>"

@app.route('/user/<username>')
def user(username):
    return "<h1> Hey hii {} !! </h1>".format(username.upper())

@app.route('/about')
def about():
    return "<h1> I'm new to flask </h1>"

if __name__ == "__main__":
    app.run(debug = True)
    
